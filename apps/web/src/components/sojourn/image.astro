---
import { buildRenderableImage } from "~/components/image/utils.js";
import type { Image } from "~/db.js";

type Props = {
  image: Pick<Image, "id" | "width" | "height">;
  class?: string | undefined;
};

const { class: className, image, ...rest } = Astro.props;
const { src, srcSet, sizes } = buildRenderableImage(image);
---

<img
  class={className}
  src={src}
  srcset={srcSet.join(", ")}
  sizes={sizes}
  {...rest}
/>
