---
import { getVideoId } from "./utils.js";

type Props = {
  src: string;
};

const { src } = Astro.props;

const videoId = getVideoId(src);

const nocookieSrc = `https://www.youtube-nocookie.com/embed/${videoId}`;
---

<div class="container">
  <iframe
    class="iframe"
    width="672"
    height="378"
    src={nocookieSrc}
    title="YouTube video player"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen></iframe>
</div>
<style>
  .container {
    position: relative;
    width: 100%;
    height: 0;
    padding-bottom: 56.25%;
    margin-bottom: 8px;
    border-radius: 4px;
    overflow: hidden;
  }

  .iframe {
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    border: none;
  }
</style>
