{
  "private": true,
  "sideEffects": false,
  "author": {
    "name": "George Czabania"
  },
  "license": "MIT",
  "scripts": {
    "build": "remix build",
    "build:types": "tsc --noEmit",
    "package": "rm -rf dist && pnpm run build && node ./scripts/build.mjs",
    "dev": "remix dev",
    "start": "remix-serve build",
    "tidy": "xo --fix --plugin=react ./app"
  },
  "dependencies": {
    "@markdoc/markdoc": "0.2.1",
    "@react-hook/resize-observer": "1.2.6",
    "@remix-run/node": "1.9.0",
    "@remix-run/react": "1.9.0",
    "@remix-run/serve": "1.9.0",
    "better-sqlite3": "8.0.1",
    "cache-manager": "5.1.4",
    "cache-manager-better-sqlite3": "1.1.2",
    "date-fns": "2.29.3",
    "p-map": "5.5.0",
    "photoswipe": "5.3.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1",
    "validator": "13.7.0",
    "zod": "3.20.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.9.0",
    "@remix-run/eslint-config": "1.9.0",
    "@types/better-sqlite3": "7.6.3",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/validator": "13.7.10",
    "@vercel/ncc": "0.36.0",
    "esbuild": "0.16.12",
    "eslint": "8.30.0",
    "typescript": "4.9.4",
    "xo": "0.53.1"
  },
  "engines": {
    "node": ">=14"
  },
  "xo": {
    "space": true,
    "semicolon": false,
    "prettier": true,
    "rules": {
      "import/extensions": "off",
      "@typescript-eslint/naming-convention": "off",
      "n/file-extension-in-import": "off"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false
  }
}
